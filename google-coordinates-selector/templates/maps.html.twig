<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Maps Example</title>
    <link rel="stylesheet" href="{{ asset('css/MapsStyle.css') }}">
    <link rel="stylesheet" href="{{ asset('scss/MapComponentStyles.css') }}">
    <script src="{{ asset('js/MapStyle.js') }}"></script>
    <script src="{{ asset('js/Coordenates.js') }}"></script>
</head>
<body>
<div class="map-component">
    <div id="map" class="map-component__map"></div>
    <div class="map-component__coordinates">
        <label for="lat" class="map-component__label">Latitude:</label>
        <input type="text" name="lat" id="lat" class="map-component__input">
        <label for="lng" class="map-component__label">Longitude:</label>
        <input type="text" name="lng" id="lng" class="map-component__input">
        <button class="map-component__button" id="copy-coordinates">Copy Coordinates</button>
    </div>
</div>

<script src="{{ asset('js/MapsHandler.js') }}"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}&callback=initMap&libraries=places"></script>
<script>
    function initMap() {
        let mapHandler = new MapsHandler();
        mapHandler.initialize();
    }

</script>
</body>
</html>